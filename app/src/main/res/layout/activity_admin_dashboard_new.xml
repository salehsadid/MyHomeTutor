<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1b2e"
    tools:context=".AdminDashboardActivity">

    <!-- Side Menu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- Left Navigation Panel -->
        <LinearLayout
            android:id="@+id/llSideMenu"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#16213e"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin Panel"
                android:textColor="#4ade80"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:id="@+id/menuDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/menuConnections"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connections"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/menuTutors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tutors"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/menuStudents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Students"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/menuTuitionPosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuition Posts"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/menuReports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/menuBannedUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banned Users"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/menuLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textColor="#ef4444"
                android:textSize="16sp"
                android:padding="12dp"
                android:clickable="true"
                android:focusable="true"/>

        </LinearLayout>

        <!-- Main Content Area -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dashboard Overview"
                    android:textColor="#4ade80"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="24dp"/>

                <!-- Statistics Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:alignmentMode="alignBounds"
                    android:layout_marginBottom="24dp">

                    <!-- Total Tuition Posts -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Tuition Posts"
                                android:textColor="#94a3b8"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvTotalPosts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#4ade80"
                                android:textSize="36sp"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Pending Posts -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending Posts"
                                android:textColor="#94a3b8"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvPendingPosts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#fb923c"
                                android:textSize="36sp"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Approved Posts -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Approved Posts"
                                android:textColor="#94a3b8"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvApprovedPosts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#4ade80"
                                android:textSize="36sp"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Total Connections -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Connections"
                                android:textColor="#94a3b8"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvTotalConnections"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#60a5fa"
                                android:textSize="36sp"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Total Students -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Students"
                                android:textColor="#94a3b8"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvTotalStudents"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#4ade80"
                                android:textSize="36sp"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Student Pending -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Student Pending"
                                android:textColor="#94a3b8"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvPendingStudents"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#fb923c"
                                android:textSize="36sp"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Total Tutors -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTotalTutors"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#1e5f5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Tutors"
                                android:textColor="#94a3b8"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvTotalTutors"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#4ade80"
                                android:textSize="36sp"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Tutor Pending -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tutor Pending"
                                android:textColor="#94a3b8"
                                android:textSize="14sp"
                                android:layout_marginBottom="8dp"/>

                            <TextView
                                android:id="@+id/tvPendingTutors"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#fb923c"
                                android:textSize="36sp"
                                android:textStyle="bold"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
