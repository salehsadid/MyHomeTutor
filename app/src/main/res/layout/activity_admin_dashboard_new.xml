<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1b2e"
    android:fitsSystemWindows="true"
    tools:context=".AdminDashboardActivity">

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Notch Space -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#16213e"/>

        <!-- Header with Menu Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#16213e"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/btnMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:src="@drawable/list"
                android:tint="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard Overview"
                android:textColor="#4ade80"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- STUDENTS SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Students"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Total Students -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvTotalStudents"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#4ade80"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Banned Students -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Banned"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvBannedStudents"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ef4444"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Pending Students -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvPendingStudents"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#fb923c"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- TUTORS SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutors"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Total Tutors -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTotalTutors"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvTotalTutors"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#4ade80"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Banned Tutors -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Banned"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvBannedTutors"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#ef4444"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Pending Tutors -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvPendingTutors"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#fb923c"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- POSTS SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posts"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Total Available Posts -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvTotalPosts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#4ade80"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Pending Post Approval -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvPendingPosts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#fb923c"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Approved Post -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Approved"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvApprovedPosts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#60a5fa"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- CONNECTION SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Connection Pending Approval -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending Approvals"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvPendingConnections"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#fb923c"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Total Successful Connection -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Successful"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvTotalConnections"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#4ade80"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- REPORTS SECTION -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reports"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Pending Reports -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvPendingReports"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#fb923c"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Solved Reports -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        app:cardBackgroundColor="#1e3a5f"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="8dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Solved"
                                android:textColor="#94a3b8"
                                android:textSize="12sp"
                                android:layout_marginBottom="4dp"/>
                            <TextView
                                android:id="@+id/tvSolvedReports"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#4ade80"
                                android:textSize="24sp"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <!-- Floating Left Navigation Panel (Overlay) -->
    <LinearLayout
        android:id="@+id/llSideMenu"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#16213e"
        android:padding="16dp"
        android:elevation="16dp"
        android:translationX="-250dp"
        android:layout_marginTop="24dp">

        android:translationX="-250dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Panel"
            android:textColor="#4ade80"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:id="@+id/menuDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashboard"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/menuConnections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connections"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/menuTutors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutors"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/menuStudents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Students"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/menuTuitionPosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuition Posts"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/menuReports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reports"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/menuPendingApprovals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pending Approvals"
            android:textColor="#fbbf24"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/menuBannedUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Banned Users"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginBottom="32dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/menuLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#ef4444"
            android:textSize="16sp"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

</FrameLayout>
