<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1b2e"
    android:paddingTop="40dp">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#16213e"
        android:elevation="4dp"
        app:titleTextColor="#ffffff"
        app:title="Students Management"/>

    <!-- Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#16213e"
        android:padding="8dp">

        <Button
            android:id="@+id/btnAllStudents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="All Students"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button_outline"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnPendingStudents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pending Students"
            android:textColor="#ffffff"
            android:background="@drawable/bg_button_outline"/>

    </LinearLayout>

    <!-- RecyclerView for Students List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStudents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"/>

</LinearLayout>
