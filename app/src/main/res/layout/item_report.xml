<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with status badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvReportType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Type: User"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PENDING"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/badge_pending"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />
        </LinearLayout>

        <!-- Reporter info -->
        <TextView
            android:id="@+id/tvReporterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Reporter: John Doe"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <!-- Reported user info -->
        <TextView
            android:id="@+id/tvReportedUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Reported: Jane Smith"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- Reason -->
        <TextView
            android:id="@+id/tvReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Reason: Inappropriate behavior"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Jan 15, 2024 03:45 PM"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnViewUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View User"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_blue_rounded"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnResolve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resolve"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_green_rounded"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/button_red_rounded"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
