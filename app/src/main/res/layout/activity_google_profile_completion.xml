<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="40dp">

        <!-- Header -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </FrameLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete Your Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/teal_button"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvInstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You signed in with Google. Please complete your profile."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Profile Photo Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfilePhoto"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_person"
                app:civ_border_color="@color/text_primary"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tvUploadPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Profile Photo"
                android:textColor="@color/teal_button"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:focusable="true"/>

            <Button
                android:id="@+id/btnSkipPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip for now"
                android:textSize="12sp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>

        <!-- Full Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_button"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name *"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_button"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number *"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Gender -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbMale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male"/>

            <RadioButton
                android:id="@+id/rbFemale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female"/>
        </RadioGroup>

        <!-- Division -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Division *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spDivision"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@color/input_background"
            android:padding="12dp" />

        <!-- District -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="District *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spDistrict"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@color/input_background"
            android:backgroundTint="@color/input_background"
            android:padding="12dp" />

        <!-- Area -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area *"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spArea"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@color/input_background"
            android:padding="12dp" />

        <!-- Institute -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_button"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInstitute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Institution"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Class (for students) -->
        <TextView
            android:id="@+id/tvClassLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spClass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@color/input_background"
            android:padding="12dp" />

        <!-- Group (for students) -->
        <TextView
            android:id="@+id/tvGroupLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@color/input_background"
            android:padding="12dp" />

        <!-- About -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/teal_button">

            <EditText
                android:id="@+id/etAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/input_background"
                android:hint="About (Optional)"
                android:inputType="textMultiLine"
                android:lines="3"
                android:padding="12dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Password for Security *"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/teal_button"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For account security, please set a password. You can use this password to log in even without Google."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="16dp"/>

        <!-- Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_button"
            app:passwordToggleEnabled="true"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password *"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Constraints -->
        <TextView
            android:id="@+id/tvConstraintLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕ Minimum 8 characters"
            android:textColor="#FF5252"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvConstraintAlpha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕ Contains alphabet"
            android:textColor="#FF5252"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvConstraintNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕ Contains number"
            android:textColor="#FF5252"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvConstraintCase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕ Mixed case (upper &amp; lower)"
            android:textColor="#FF5252"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/tvConstraintSymbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✕ Contains symbol"
            android:textColor="#FF5252"
            android:textSize="12sp"
            android:layout_marginBottom="16dp"/>

        <!-- Confirm Password -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="@color/teal_button"
            app:passwordToggleEnabled="true"
            app:hintEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password *"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/text_primary" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvPasswordMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:layout_marginBottom="24dp"/>

        <!-- Next Button -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_green_rounded"
            android:backgroundTint="@color/teal_button"
            android:padding="16dp"
            android:text="Next: Document Verification"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
