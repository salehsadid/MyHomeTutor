<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1b2e"
    android:fitsSystemWindows="true">

    <!-- Notch Space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#16213e"/>

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#16213e"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#ffffff"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Banned Users"
            android:textColor="#ef4444"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_search"
            android:tint="#ffffff"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"/>

    </LinearLayout>

    <!-- Search View Container (Initially Hidden) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/searchContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#1e293b"
        app:cardElevation="4dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppSearchView"
            app:iconifiedByDefault="false"
            app:queryHint="Search banned users..." />
    </androidx.cardview.widget.CardView>

    <!-- Banned Users List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBannedUsers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"/>

    <!-- Empty State -->
    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No banned users"
        android:textColor="#94a3b8"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>
