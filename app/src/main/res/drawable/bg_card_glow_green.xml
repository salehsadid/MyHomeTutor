<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow effect layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp"/>
            <gradient
                android:startColor="#804ade80"
                android:centerColor="#404ade80"
                android:endColor="#004ade80"
                android:angle="45"
                android:type="radial"
                android:gradientRadius="200dp"/>
        </shape>
    </item>
    
    <!-- Card background -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp"/>
            <solid android:color="#1e3a5f"/>
            <stroke
                android:width="1dp"
                android:color="#4ade80"/>
        </shape>
    </item>
</layer-list>
